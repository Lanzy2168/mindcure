<view class="splash-bg">
  <image class="splash-wallpaper" src="https://mindcure-1365987716.cos.ap-guangzhou.myqcloud.com/splash-main.jpg" mode="aspectFill" />
  <view class="bubble" style="top: 18%; left: 22%; animation-delay: 0.2s;"></view>
  <view class="bubble" style="top: 30%; left: 70%; animation-delay: 0.5s;"></view>
  <view class="bubble" style="top: 60%; left: 40%; animation-delay: 0.8s;"></view>
  <view class="bubble" style="top: 75%; left: 80%; animation-delay: 1.1s;"></view>
  <view class="bubble" style="top: 80%; left: 15%; animation-delay: 1.4s;"></view>
  <view class="progress-bar-container">
    <view class="progress-bar-bg">
      <view class="progress-bar-fill" style="width: {{progress}}%;"></view>
    </view>
    <view class="progress-tip">{{progressTip}}</view>
  </view>
</view> 