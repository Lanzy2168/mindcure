/* pages/fortune-fish/fortune-fish.wxss */
.container {
  min-height: 100vh;
  width: 100vw;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  position: relative;
  
}

.glass-card {
  background: rgba(255, 255, 255, 0.18);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(0,0,0,0.08);
  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
  padding: 32rpx;
  margin: 32rpx 24rpx 0 24rpx;
}

.merit-header {
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}
.merit-title {
  font-size: 44rpx;
  font-weight: bold;
  color: rgb(119, 114, 114);
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
  text-shadow: none;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}
.merit-desc {
  font-size: 32rpx;
  color: #555;
  font-weight: regular;
  text-align: center;
  line-height: 1.6;
  max-width: 600rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  color: rgb(155, 151, 151);
}
.merit-value-area {
  margin-bottom: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(8px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  padding: 48rpx 60rpx 36rpx 60rpx;
}
.merit-value-label {
  font-size: 40rpx;
  color: rgba(133, 132, 132, 0.55);
  margin-bottom: 12rpx;
  font-weight: bold;
  text-shadow: 0 0rpx 0rpx rgba(0, 0, 0, 0.3);
}
.merit-value {
  font-size: 60rpx;
  color: #8bc34a;
  font-weight: bold;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}
.merit-history-btn, .tap-tip, .round-result {
  font-size: 36rpx;
  color: #888;
  font-weight: bold;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  padding: 16rpx 32rpx;
 
  border-radius: 24rpx;
  text-shadow: 0 2rpx 4rpx rgba(104, 102, 102, 0.49);
}
.fish-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.merit-fish {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
  transition: transform 0.2s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}
.merit-fish.tap {
  transform: scale(1.15) rotate(-10deg);
}
.tap-tip {
  color: #888;
  font-size: 32rpx;
  background: rgba(255, 255, 255, 0.29);
  backdrop-filter: blur(8px);
  padding: 16rpx 32rpx;
 
}
.timer-area {
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(8px);
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  text-shadow: 0 2rpx 4rpx rgba(72, 71, 71, 0.2);
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}
.timer-label {
  margin-right: 8rpx;
   color:rgba(96, 93, 93, 0.13);
}
.timer-value {
  font-size: 36rpx;
  color: #ff7043;
}
.round-result {
  margin-top: 18rpx;
  font-size: 32rpx;
  color:  rgba(255, 255, 255, 0.17);
  font-weight: bold;
  background: rgba(255, 255, 255, 0.17);
  backdrop-filter: blur(8px);
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
   color:rgb(237, 129, 97);
}