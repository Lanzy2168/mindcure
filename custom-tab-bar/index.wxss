.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.tab-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  border-radius: 50%;
  transition: all 0.3s;
}

.tab-icon.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.icon-text {
  font-size: 32rpx;
  color: #999999;
  transition: color 0.3s;
}

.tab-icon.active .icon-text {
  color: white;
}

.tab-text {
  font-size: 20rpx;
  color: #999999;
  transition: color 0.3s;
}

.tab-text.active {
  color: #667eea;
  font-weight: bold;
} 